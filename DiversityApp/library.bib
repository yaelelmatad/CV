url = {http://arxiv.org/abs/1005.0804 http://arxiv.org/pdf/1005.0804},
year = {2010}
}
@article{Zaskulnikov2010,
abstract = {Considered is a classical system consisting of a homogeneous medium of simple
particles with the locally introduced field imitating a solid. The field with a
hard core both with rigid and soft (realistic) boundaries is examined. General
expression for omega-potential is obtained, and it is shown that for realistic
