author = {Roldan, Edgar and Parrondo, Juan M.R.},
file = {::},
keywords = {dissipation,dynamics,trajectories},
mendeley-tags = {dissipation,dynamics,trajectories},
title = {{Estimating dissipation from single stationary trajectories}},
type = {Journal article},
url = {http://arxiv.org/abs/1004.2831 http://arxiv.org/pdf/1004.2831},
year = {2010}
}
@article{Woloszczuk2010,
abstract = {While uniform temperature has no effect on equilibrium properties of
hard-core systems, its gradient might substantially change their behaviour. In
particular, in hard-disk system subject to temperature difference Delta\_T disks
are repelled from the hot boundary of the system and accumulate at the cold
one. Using event-driven molecular dynamics simulations we show that for
sufficiently large Delta\_T or coverage ratio rho\^{}*, crystal forms at the cold
boundary. In this spatially inhomogeneous system a significant decrease of
diffusivity of disks clearly marks the stationary interface between liquid and
crystal. Simulations show that for this nonequilibrium system the equipartition
