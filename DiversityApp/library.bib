}
@article{Umbanhowar2010,
abstract = {Impact dynamics during collisions of spheres with granular media reveal a
pronounced and non-trivial dependence on volume fraction $\backslash$phi. Post impact
crater morphology identifies the critical packing state $\backslash$phi\_\{cps\}, where
sheared grains neither dilate nor consolidate, and indicates an associated
change in spatial response. Current phenomenological models fail to capture the
observed impact force for most $\backslash$phi; only near $\backslash$phi\_\{cps\} is force separable
into additive terms linear in depth and quadratic in velocity. At fixed depth
the quadratic drag coefficient decreases (increases) with depth for $\backslash$phi \&lt;
$\backslash$phi\_\{cps\} ($\backslash$phi \&gt; $\backslash$phi\_\{cps\}). At fixed low velocity, depth dependence of
force shows a Janssen-type exponential response with a length scale that
decreases with increasing $\backslash$phi; and is nearly constant for $\backslash$phi \&gt; $\backslash$phi\_\{cps\}.},
author = {Umbanhowar, Paul and Goldman, Daniel I.},
keywords = {packing},
mendeley-tags = {packing},
title = {{Granular impact and the critical packing state}},
type = {Journal article},
url = {http://arxiv.org/abs/1007.2695 http://arxiv.org/pdf/1007.2695},
year = {2010}
}
@article{Stevenson2010,
abstract = {In recent years it has become widely accepted that a dynamical length scale
\{$\backslash$xi\}\_\{$\backslash$alpha\} plays an important role in supercooled liquids near the glass
transition. We examine the implications of the interplay between the growing
\{$\backslash$xi\}\_\{$\backslash$alpha\} and the size of the crystal nucleus, \{$\backslash$xi\}\_M, which shrinks on
cooling. We argue that at low temperatures where \{$\backslash$xi\}\_\{$\backslash$alpha\} \&gt; \{$\backslash$xi\}\_M a new
crystallization mechanism emerges enabling rapid development of a large scale
web of sparsely connected crystallinity. Though we predict this web percolates
